              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserUpdatePasswordResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {}
          },
          "404": {
            "description": "Email not found",
            "content": {}
          }
        }
      }
    },
    "/user/add-avatars": {
      "patch": {
        "tags": ["User"],
        "summary": "Add user avatar",
        "parameters": [],
        "requestBody": {
          "description": "Upload file avatar",
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/UserChangeAvatarRequest"
              }
            }
          }
        },
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Avatar URL",
